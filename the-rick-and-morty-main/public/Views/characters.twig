{% extends "layout.twig" %}
{% block content %}
    {% if cards == null %}

        <h1>Not found!</h1>

    {% else %}

        <div class="grid place-items-up place-items-center">
            <div class="h-56 grid grid-cols-3 gap-12 content-normal">

                {% for card in cards %}

                    <div class="max-w-sm shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 ">
                        <img><a href="/character/{{ card.id }}"><img src="{{ card.image }}"></a></img>
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ card.name }}</h5>
                        <p class="mb-2 text-1xl tracking-tight text-gray-900 dark:text-white">{{ card.status }}
                            - {{ card.species }}</p>

                        <p> Last known location: </p>
                        <li>{{ card.location.name }}</li>


                        {#                        <li><a href="{{ card.location.url }}" #}
                        {#                               class="font-medium text-blue-600 dark:text-blue-500 hover:underline">{{ card.location.name }}</a> #}
                        {#                        </li> #}

                        <p> First Seen in: </p>
                        <li>{{ card.episodeName }}</li>

                        {#                        <li><a href="{{ card.episode[0] }}" #}
                        {#                               class="font-medium text-blue-600 dark:text-blue-500 hover:underline">{{ card.episodeName }}</a> #}
                        {#                        </li> #}
                    </div>

                {% endfor %}

            </div>
        </div>


    {% endif %}
    {% for i in 1..pages %}

        <nav aria-label="Page navigation example">
            <ul class="place-items-center inline-flex -space-x-px">
                <li>
                    <a href="/characters/{{ i }}"{{ i }}
                       class="px-5 py-1 ml-1 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">{{ i }}</a>
                </li>
            </ul>
        </nav>

    {% endfor %}
{% endblock %}


