{% extends "layout.twig" %}
{% block content %}
    {% if cards == null %}

        <h1>Not found!</h1>

    {% else %}

        <div class="grid place-items-up place-items-center">
            <div class="h-56 grid grid-cols-3 gap-12 content-normal">

                {% for card in cards %}
                    <a href="/character/{{ card.id }}">


                        <div class="hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 max-w-sm
                        shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] p-6 bg-white border border-gray-200 rounded-lg shadow
                        dark:bg-gray-800 dark:border-gray-700 ">
                            <img src="{{ card.image }}" alt="{{ card.name }}">
                            </img>
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ card.name }}</h5>
                            <p class="mb-2 text-1xl tracking-tight text-gray-900 dark:text-white">{{ card.status }}
                                - {{ card.species }}</p>

                            <p> Last known location: </p>
                            <li>{{ card.location.name }}</li>

                            <p> First Seen in: </p>
                            <li>{{ card.episodeName }}</li>

                        </div>

                    </a>

                {% endfor %}

            </div>


        </div>
        {% for i in 1..pages %}
            <nav aria-label=" Page navigation example">
                <ul class="place-items-center inline-flex -space-x-px">
                    <li>
                        <a href="/characters/{{ i }}"{{ i }}
                           class="px-5 py-1 ml-1 leading-tight text-gray-500 bg-white border border-gray-300
                           rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700
                            dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">{{ i }}</a>
                    </li>
                </ul>
            </nav>
        {% endfor %}
    {% endif %}




{% endblock %}


