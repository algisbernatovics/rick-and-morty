{% extends "Layout.twig" %}
{% block content %}
    <div id="singleContent">
        <div class="grid place-items-up place-items-center">
            <div class="h-56 grid grid-cols-1 gap-12 content-normal">

                <div class="dark:bg-stone-950 shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow map animate-fade-in hover:bg-gray-100 mx-auto">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-rose-500">{{ card.name }}</h5>

                    <table class="w-full mb-4">
                        {% if card.id is not empty %}
                            <tr class="border-b">
                                <td class="pb-2 pr-2"><strong>ID:</strong></td>
                                <td class="pb-2 mb-2">{{ card.id }}</td>
                            </tr>
                        {% endif %}
                        {% if card.airDate is not empty %}
                            <tr class="border-b">
                                <td class="pb-2 pr-2"><strong>Air Date:</strong></td>
                                <td class="pb-2 mb-2">{{ card.airDate }}</td>
                            </tr>
                        {% endif %}
                        {% if card.episode is not empty %}
                            <tr class="border-b">
                                <td class="pb-2 pr-2"><strong>Episode:</strong></td>
                                <td class="pb-2 mb-2">{{ card.episode }}</td>
                            </tr>
                        {% endif %}
                        {% if card.created is not empty %}
                            <tr class="border-b">
                                <td class="pb-2 pr-2"><strong>Created:</strong></td>
                                <td class="pb-2 mb-2">{{ card.created }}</td>
                            </tr>
                        {% endif %}
                    </table>

                </div>

            </div>

            <div style="height: 60px;"></div>
            {% if info %}
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-rose-500">
                Characters Featured in Episode '{{ card.name }}'
            </h5>

            <div style="height: 20px;"></div>

            <div class="grid place-items-center container mx-auto px-4">
                <div class="grid md:grid-cols-3 gap-24 content-normal sm:grid-cols-1">
                    {% for character in info %}
                        <a href="/character/{{ character.id }}">
                            <div class="dark:bg-stone-950 map animate-fade-in hover-bg-gray-100 max-w-sm shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] p-6 bg-white border border-gray-200 rounded-lg shadow">
                                <div class="myBox">
                                    <img src="{{ character.imageUrl }}" alt="{{ character.name }}">
                                    <p>{{ character.name }}</p>
                                </div>

                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    <div style="height: 120px;"></div>

    <div id="filterContent">
        {% include pageName|capitalize ~ '/List.twig' %}
    </div>

{% endblock %}
