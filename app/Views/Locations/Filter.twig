<form action="/{{ pageName }}/filter" method="post">
    <ul class="menu-list">
        <li class="w-full mb-4 md:mb-0">
            <input type="text" id="name" name="name" placeholder="Name" class="w-full px-2 py-1 border rounded-md bg-black text-white">
        </li>

        <li class="w-full mb-4 md:mb-0">
            <input type="text" id="type" name="type" placeholder="Type" class="w-full px-2 py-1 border rounded-md bg-black text-white">
        </li>

        <li class="w-full mb-4 md:mb-0">
            <input type="text" id="dimension" name="dimension" placeholder="Dimension" class="w-full px-2 py-1 border rounded-md bg-black text-white">
        </li>

        <li class="w-full py-1">
            <button type="submit" class="px-2 py-1 bg-gray-800 text-white rounded-lg hover:bg-gray-900 focus:outline-none">
                Filter
            </button>
        </li>
    </ul>
</form>
