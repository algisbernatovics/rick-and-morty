{% if info.pages > 1 %}
    <div class="container mx-auto text-center mt-4">
        <nav class="inline-block">
            <ul class="md:inline-flex pagination">

                <li class="pagination-item">
                    {% if page > 1 %}
                        <a href="/{{ pageName }}?page=1{{ query }}"
                           class="flex items-center justify-center px-4 h-10 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">First</a>
                    {% endif %}
                </li>

                {# Set the number of pages to display around the current page #}
                {% set numPagesToShow = 2 %}
                {% set startPage = max(1, page - numPagesToShow) %}
                {% set endPage = min(info.pages, page + numPagesToShow) %}

                {% for i in startPage..endPage %}

                    <li class="pagination-item">
                        <a href="/{{ pageName }}?page={{ i }}{{ query }}"
                           class="flex items-center justify-center px-4 h-10 {% if i == startPage and i == page %} rounded-s-lg {% endif %} {% if i == endPage and i == page %} rounded-e-lg {% endif %}
                                  {% if i == page %}text-blue-600 border hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white{% else %}text-gray-500 bg-white border border-e-0 border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white{% endif %}">
                            {{ i }}
                        </a>
                    </li>
                {% endfor %}

                <li class="pagination-item">
                    {% if page < info.pages %}
                        <a href="/{{ pageName }}?page={{ info.pages }}{{ query }}"
                           class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">Last</a>
                    {% endif %}
                </li>

            </ul>
        </nav>
    </div>
    <div style="height: 120px;"></div>
{% endif %}
{# rounded-s-lg #}