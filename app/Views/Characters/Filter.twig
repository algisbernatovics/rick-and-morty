<form action="/{{ pageName }}/filter" method="post">
    <ul class="search-list">

        <li class="w-full md:w-1/4">
            <input type="text" id="name" name="name" placeholder="Name"
                   class="w-full px-2 py-1 border rounded-md bg-black text-white">
        </li>

        <li class="w-full md:w-1/4">
            <input type="text" id="species" name="species" placeholder="Species"
                   class="w-full px-2 py-1 border rounded-md bg-black text-white">
        </li>

        <li class="w-full md:w-1/4">
            <input type="text" id="type" name="type" placeholder="Type"
                   class="w-full px-2 py-1 border rounded-md bg-black text-white">
        </li>

        <li class="w-full md:w-1/4">
            <select id="status" name="status" class="w-full px-2 py-1 border rounded-md bg-black text-white">
                <option value="" disabled selected hidden>Status</option>
                <option value="alive">Alive</option>
                <option value="dead">Dead</option>
                <option value="unknown">Unknown</option>
            </select>
        </li>

        <li class="w-full md:w-1/4">
            <select id="gender" name="gender" class="w-full px-2 py-1 border rounded-md bg-black text-white">
                <option value="" disabled selected hidden>Gender</option>
                <option value="female">Female</option>
                <option value="male">Male</option>
                <option value="genderless">Genderless</option>
                <option value="unknown">Unknown</option>
            </select>
        </li>

        <li class="w-full py-2">
            <button type="submit"
                    class="px-2 py-1 bg-gray-800 text-white rounded-lg hover:bg-gray-900 focus:outline-none">
                Filter
            </button>
        </li>

    </ul>
</form>


