{% extends "Layout.twig" %}
{% block content %}
    {% if card == null %}

        <h1>Not found!</h1>

    {% else %}
        <div class="grid place-items-up place-items-center">
            <div
                    class="flex flex-col items-center bg-white border border-gray-200 rounded-lg  ">
                <br>

                <div class="shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] max-w-sm p-6 bg-white border border-gray-200
                 rounded-lg shadow">
                    <img><img src="{{ card.image }}"></a></img>
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{{ card.name }}</h5>
                    <p class="mb-2 text-1xl tracking-tight text-gray-900">{{ card.status }}
                        - {{ card.species }}</p>
                    <p> Last known location: </p>
                    <li>{{ card.location.name }}</li>
                    <p> Created: </p>
                    <li>{{ card.created }}</li>

                </div>

                <div class="flex flex-col justify-between p-4 leading-normal">

                    <p class="mb-3 font-normal text-gray-700">

                    <div class="place-items-center "></div>
                    <div class="h-128 grid grid-cols-3 gap-1 content-normal ">

                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900"> Seen in: </h5>

                        {% for episode in info %}

                            <a href="/episode/{{ episode.id }}"
                               class="text-white bg-slate-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium
                               rounded-lg text-sm px-5 py-2.5 mr-2 mb-2
                               focus:outline-none">{{ episode.episodeName }}</a>

                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>

        <br><br><br><br><br>

    {% endif %}

{% endblock %}

